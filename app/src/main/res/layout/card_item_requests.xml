<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_requests"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/name_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mail_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_request"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:text="friend_mail"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_accept"
            android:layout_below="@id/mail_request"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="Accept"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/reject_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mail_request"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:text="Reject"
            android:textColor="@android:color/white"
            android:background="@drawable/button_reject"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
